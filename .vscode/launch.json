{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno Backend",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["run", "--inspect-brk", "-A", "./src/service.ts"],
            "attachSimplePort": 9229,
            "program": "${workspaceFolder}/src/service.ts",
            "outputCapture": "std",
            "preLaunchTask": "build-frontend"
        }
    ]
}